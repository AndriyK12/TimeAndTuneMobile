<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10sp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/listItem"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        app:cardBackgroundColor="#272533"
        android:clickable="true"
        app:cardCornerRadius="10sp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints">
        
        <TextView
            android:id="@+id/listItemTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="98sp"
            android:text="Some Text">
        </TextView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="57sp"
            android:layout_height="25sp"
            android:layout_marginTop="32sp"
            android:layout_marginRight="14sp"
            android:layout_gravity="right"
            app:cardBackgroundColor="#D40000"
            app:cardCornerRadius="7sp"
            app:strokeColor="#D40000">

            <TextView
                android:id="@+id/listItemDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="07.03">
            </TextView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="9sp"
            android:layout_height="12sp"
            android:layout_gravity="right"
            android:layout_marginTop="7sp"
            android:layout_marginRight="50sp"
            app:srcCompat="@drawable/timer"
            />

        <TextView
            android:id="@+id/listItemTimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginTop="2.25sp"
            android:layout_marginRight="10sp"
            android:textColor="#FFFFFF"
            android:text="01:30">
        </TextView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>