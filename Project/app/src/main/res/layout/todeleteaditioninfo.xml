<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141122"
    tools:context=".Presentation.Navigation.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:layout_marginTop="38sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="89sp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="T&amp;T"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="6sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="116sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="30sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#272533"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#272533"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Priority: "
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/priorityField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#272533">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#272533"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#272533"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/updateButton"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/inter_semibold"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="32sp"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/finishButton"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/inter_semibold"
            android:text="Finish"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="220sp"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/playButton"
            android:layout_width="30sp"
            android:layout_height="35sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/inter_semibold"
            android:text="Finish"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="160sp"/>
    </RelativeLayout>
</FrameLayout>