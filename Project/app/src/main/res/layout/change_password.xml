<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141122"
    tools:context=".Presentation.Navigation.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:layout_marginTop="38sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="89sp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#141122"
            android:contentDescription="user_icon"
            android:drawableLeft="@drawable/further_icon"
            android:onClick="onButtonOutClick"
            android:rotation="180"
            android:text=""/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Change password"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginLeft="6sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="116sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="30sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New password"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                android:layout_marginBottom="35sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#272533"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm password"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="20dp"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#272533"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/inter_semibold"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>
</FrameLayout>